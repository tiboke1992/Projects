<Window x:Class="MVVM.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="423.2">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Label>Customer name:</Label>
        <TextBox Text="{Binding Customer.Name,UpdateSourceTrigger=PropertyChanged}" Width="136"></TextBox>
        <Button Command="{Binding UpdateCommand}" Content="Update"/>
    </StackPanel>
</Window>
